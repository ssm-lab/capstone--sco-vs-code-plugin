{
	"compilerOptions": {
	  "module": "Node16",
	  "target": "ES2022",
	  "lib": [
		"ES2022",
		"DOM",
		"DOM.Iterable"
	  ],
	  "sourceMap": true,
	  "rootDirs": ["./src", "./test"],
	  "outDir": "dist",
	  "strict": true,
	  "typeRoots": ["./node_modules/@types", "./types"],
	  "forceConsistentCasingInFileNames": true,
	  "allowSyntheticDefaultImports": true
	},
	"include": ["./src/global.d.ts", "./src/types.d.ts", "src/**/*.ts", "test/**/*.ts", "media/script.js"],
	"exclude": ["node_modules", "dist"]
  }
  