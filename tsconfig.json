{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": [
			"ES2022",
			"DOM",
			"DOM.Iterable"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		"typeRoots": ["./node_modules/@types", "./types"],
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/global.d.ts", "src/**/*", "media/script.js"]
}
